/**index.wxss**/
.container{
  width: 100%;
  height: 100%;

}


.lunbor{
  width: 100%;
  height: 100%;
}

.lunbor image{
  width: 120%;
}

.box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}

.box image{
  border-radius: 30px;
 
}

.box .font{
  font-size: 24rpx;
  text-align: center;
}


.recommend{
  border-top: 4rpx solid silver;
  border-bottom:  4rpx solid silver;
  height: 150rpx;
}

.recommend .font{
  font-size: 20rpx;
  margin-left: 20rpx;
  display: inline-block;
}

.bld{
  text-align: center;
  padding: 10rpx;
}

.title{
  margin-top: 10rpx;
  font-size: 20rpx;
}

.pic{
  text-align: center;
}

.nav{
  display: flex;
  flex-direction: row;
  text-align: center;
}

.nav-item{
  width: 33%;
  font-size: 13rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.hr{
  width: 100%;
  height: 15rpx;
  background-color: #F4F5F6;
}



.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}